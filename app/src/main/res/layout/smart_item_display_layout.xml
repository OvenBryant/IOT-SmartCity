<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_smart_pic"
        android:layout_width="100dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher_round"
        android:layout_height="100dp"/>
    
    <TextView
        android:id="@+id/id"
        android:text="订单号:"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/img_smart_pic"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_smart_id"
        android:text="1008611"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/id"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/goods"
        android:text="物品:"
        android:layout_below="@id/id"
        android:layout_toRightOf="@id/img_smart_pic"
        android:layout_marginLeft="5dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_smart_goods"
        android:text="西瓜"
        android:layout_below="@id/id"
        android:layout_toRightOf="@id/goods"
        android:layout_marginLeft="5dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/price"
        android:text="价格:"
        android:layout_below="@id/goods"
        android:layout_toRightOf="@id/img_smart_pic"
        android:layout_marginLeft="5dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/unit"
        android:text="￥"
        android:layout_below="@id/tv_smart_goods"
        android:layout_toRightOf="@id/goods"
        android:layout_marginLeft="2dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_smart_price"
        android:text="5"
        android:layout_below="@id/tv_smart_goods"
        android:layout_toRightOf="@id/goods"
        android:layout_marginLeft="15dp"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/discount_price"
        android:text="折后价"
        android:layout_marginTop="5dp"
        android:textColor="#FFFF0000"
        android:layout_below="@id/tv_smart_goods"
        android:layout_toRightOf="@id/tv_smart_price"
        android:layout_marginLeft="5dp"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/start_date"
        android:text="生产日期:"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/img_smart_pic"
        android:layout_below="@id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_smart_start_date"
        android:text="2021-10-29 9:46"
        android:textSize="15sp"
        android:layout_toRightOf="@id/start_date"
        android:layout_below="@id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/stop_date"
        android:text="保质日期:"
        android:textSize="15sp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/img_smart_pic"
        android:layout_below="@id/start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_smart_stop_date"
        android:text="2022-11-29 22:46"
        android:textSize="15sp"
        android:layout_toRightOf="@id/start_date"
        android:layout_below="@id/tv_smart_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>




</RelativeLayout>