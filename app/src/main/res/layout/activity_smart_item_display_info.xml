<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".activity.smartsupermarket.SmartItemDisplayInfoActivity">

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/smart_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/main_background" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:text="商品的信息:"
        android:textColor="#FFFF0000"
        android:textSize="30sp" />

        <Button
            android:id="@+id/btn_QRcode"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@drawable/btn_bg"
            android:text="生成二维码" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="商品的订单号是:  "
        android:textSize="20sp"
        android:textColor="#FA9494"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/smart_id"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textColor="#FA9494"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="商品的昵称是&#12288;:  "
            android:textSize="20sp"
            android:textColor="#FA9494"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/smart_name"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="#FA9494"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="商品的价格&#12288;&#12288;:  "
            android:textSize="20sp"
            android:textColor="#FA9494"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/smart_price"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="#FA9494"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="商品的生产日期:  "
            android:textSize="20sp"
            android:textColor="#FA9494"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/smart_startdate"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="#FA9494"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="商品的保质日期:  "
            android:textSize="20sp"
            android:textColor="#FA9494"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/smart_stopdate"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textColor="#FA9494"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>



</LinearLayout>